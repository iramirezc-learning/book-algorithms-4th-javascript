#!/usr/bin/env node
const { Random } = require('../js/util')

/**
 * RandomSeq. A sample StdOut client.
 * @see p.37
 * @see {@link https://algs4.cs.princeton.edu/code/edu/princeton/cs/algs4/RandomSeq.java.html}
 */
class RandomSeq {
  /**
   * Prints `n` random real numbers in range [lo, hi).
   * @param {number} n The length of the random sequence.
   * @param {number} lo The inclusive lower bound of the random number.
   * @param {number} hi The non-inclusive higher bound of the random number.
   *
   * @example <caption>Generating 5 random doubles between 100-199.99</caption>
   * ```sh
   * $ ./RandomSeq 5 100.0 199.99
   * 166.29
   * 171.09
   * 199.85
   * 159.78
   * 165.14
   * ```
   *
   * @example <caption>Streaming the StdOut to a file</caption>
   * ```sh
   * $ ./RandomSeq 1000 100.0 199.99 > ./output.txt
   * ```
   */
  static run(n, lo, hi) {
    for (let i = 0; i < n; i++) {
      // @ts-ignore
      const x = Random.uniform(lo, hi)

      console.log(x.toFixed(2))
    }
  }

  /**
   * Main execution.
   * @param {Array<string>} args Arguments form the command line.
   */
  static main(args) {
    const n = parseInt(args[0], 10)
    const lo = parseFloat(args[1])
    const hi = parseFloat(args[2])

    this.run(n, lo, hi)
  }
}

RandomSeq.main(process.argv.slice(2))
